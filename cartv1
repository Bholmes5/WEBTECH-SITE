    <script>
        function burgerfunc(){//this is the burger menu function to make the mobile list nave show and hide when the button is clicked 
            var nav = document.getElementById("mobilelistNav");// sets a variable as nav for the item in the html 
            if (nav.style.display === "flex") {// this if statement checks if it is already shown or hidden then inverts
                nav.style.display = "none";
            } else   {
                nav.style.display = "flex";
      }
        }</script>
    <ul id="mobilelistNav">
        <li ><a class="mobilelist" href="mainpage.html">Home</a></li> <!-- each list item contains a link (marked by the anchor tag -->
        <li ><a class="mobilelist" href="products.html"> Products</a> </li>
        <li ><a class="mobilelist" href="cart.html"> Cart</a> </li>    
    </ul>
   <main>


<div id ="item">
<button onclick="clear()" id="clear" >
    Clear Cart
</button>
</div>

<script>
        function clear(){
            alert
            localStorage.clear();
        }

        var items = document.getElementById("item") 
        if (localStorage.getItem('counter')!== null){
        counter = localStorage.getItem('counter');
        items.innerHTML += "<div id ='items'><p id ='counter'>Items</p><p></p><h1 id='itemname'>Product</h1><h1 id='itemname'>Price</h1>" 
        for (var i=1; i<=counter ;i++){
                      
            items.innerHTML += "<div id ='items'><p id ='counter'>"+i+"</p><img id='itemimage'  src='"+read()[4]+"'alt='"+read()[0]+"'><h1 id='itemname'>"+read()[0]+"-"+read()[1]+"</h1><p id='itemprice'>"+read()[3]+"</p></div>";
        }
        } else {
            items.innerHTML = "<p>There is nothing in the basket</p>"
        }
        function read(){
        const localData = JSON.parse(localStorage.getItem("more"+i+"")) || [0, 0, 0, 0, 0];
        return localData
    }
</script>
</main>
